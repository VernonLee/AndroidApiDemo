<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 跑马灯 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/subtitle_bg"
            android:padding="10dp"
            android:text="跑马灯"
            android:textColor="@color/white_opaticy"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/textview_marqueen" />

        <!-- Drawable TextView -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/subtitle_bg"
            android:padding="10dp"
            android:text="Drawable TextView"
            android:textColor="@color/white_opaticy"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/setting_icon_battery_64"
                android:gravity="center"
                android:text="电量" />

            <Button
                android:id="@+id/btn_drawable_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="改变" />
            
            <Button 
                android:id="@+id/btn_drawable_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="隐藏"/>
        </LinearLayout>

        <!-- 加边框的TextView -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/subtitle_bg"
            android:padding="10dp"
            android:text="加边框的TextView"
            android:textColor="@color/white_opaticy"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/textview_bg_px"
                android:padding="20dp"
                android:text="测试文字(边框单位：px)"
                android:textColor="@color/subtitle_bg"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/textview_bg_dp"
                android:padding="20dp"
                android:text="测试文字(边框单位：dp)"
                android:textColor="@color/subtitle_bg"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明：如果想要使边框更细，直接使用px，\n dp = px*destiny; destiny:为手机像素密度"
                android:textColor="@color/subtitle_bg"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>